<h2 class="title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: 'form-label', for: 'exampleInputEmail1' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'exampleInputEmail1', aria: { describedby: 'emailHelp' } %>
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: 'form-label', for: 'exampleInputPassword1' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'exampleInputPassword1' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: 'form-check-input', id: 'exampleCheck1' %>
      <%= f.label :remember_me, class: 'form-check-label', for: 'exampleCheck1' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
