<h1>Edit Profile</h1>

<%= form_with model: @person, url: person_path, local: true do |form| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% @person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :sitter %>
    <%= form.check_box :sitter %>
  </div>

  <div class="field">
    <%= form.label :profile_image %>
    <%= form.file_field :profile_image %>
  </div>

  <% if @person.sitter? %>
    <%= form.fields_for :sitter_profile_attributes, @person.sitter_profile do |sitter_fields| %>
      <div class="field">
        <%= sitter_fields.label :rate %>
        <%= sitter_fields.text_field :rate %>
      </div>

      <div class="field">
        <%= sitter_fields.label :description %>
        <%= sitter_fields.text_field :description %>
      </div>

      <div class="field">
        <%= sitter_fields.label 'Accepted pets' %><br />
        <%= sitter_fields.collection_check_boxes(:species_ids, Specie.all.order(name: :asc), :id, :name) %>
      </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit 'Update Profile' %>
  </div>
<% end %>

<%= link_to 'Back', me_person_path %>
