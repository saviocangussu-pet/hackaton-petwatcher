<h1 class="title"><%= @pet.name %></h1>

<div class="pet-image mb-3">
  <% if @pet.image.attached? %>
    <%= image_tag @pet.image, style: "width: 10em;" %>
  <% else %>
    <%= image_tag 'no-image-profile.png', style: "width: 10em;", class: "profile-image" %>
  <% end %>
</div>

<div class="mb-3">
  <p>
    <strong>Species:</strong>
    <%= @pet.specie.name if @pet.specie %>
  </p>
</div>

<div class="mb-3">
  <p>
    <strong>Description:</strong>
    <%= @pet.description if @pet.description %>
  </p>
</div>

<div class="mb-3">
  <p>
    <strong>Owner:</strong>
    <%= @pet.owner.name if @pet.owner %>
  </p>
</div>

<div class="actions mb-3">
  <%= link_to 'Edit', edit_pet_path(@pet), class: 'btn btn-primary' %>
  <%= link_to 'Back to My Pets', pets_path, class: 'btn btn-secondary' %>
</div>
