<h1 class="title">Add a New Pet</h1>

<%= form_with(model: @pet, local: true, class: 'needs-validation', novalidate: true) do |form| %>
  <% if @pet.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>
      <ul>
        <% @pet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :specie_id, "Species", class: 'form-label' %>
    <%= form.collection_select :specie_id, Specie.all, :id, :name, {}, { class: 'form-select' } %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: 'form-label' %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, rows: 4, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Add Pet", class: 'btn btn-primary' %>
    <%= link_to 'Back to My Pets', pets_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
