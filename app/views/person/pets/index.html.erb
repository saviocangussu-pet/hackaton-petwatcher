<div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="title bigger-title">My Pets</h1>
        <p>Add, edit, or update your pets’ profiles so sitters know exactly who they’ll be caring for.</p>
      </div>
      <div class="col-lg-6 text-lg-end">
        <%= link_to 'Add a New Pet', new_pet_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row text-center">
      <% @pets.each do |pet| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 pet-card">
            <div class="card-body pet-card-body position-relative">

              <!-- Delete Button on Top-Right -->
              <%= link_to '', pet_path(pet), class: 'fa fa-trash btn btn-outline-light btn-sm position-absolute top-0 end-0 m-2', data: { turbo_method: "delete", confirm: "Are you sure?" } %>

              <!-- Image and Name Row -->
              <div class="d-flex align-items-center mb-3">
                <!-- Pet Image -->
                <% if pet.image.attached? %>
                  <%= image_tag pet.image, alt: pet.name, class: 'img-fluid rounded-circle me-3 pet-card-img', style: 'width: 60px; height: 60px;' %>
                <% else %>
                  <%= image_tag 'no-image-profile.png', alt: 'No image', class: 'img-fluid rounded-circle me-3 pet-card-img', style: 'width: 60px; height: 60px;' %>
                <% end %>

                <!-- Pet Name -->
                <h5 class="card-title mb-0"><%= pet.name %></h5>
              </div>

              <!-- Description -->
              <p class="card-text"><%= truncate(pet.description, length: 80, omission: '...') %></p>

              <!-- Species Info -->
              <p class="card-text"><span class="fa fa-paw"></span> <%= pet.specie.name %></p>

              <!-- Edit Button -->
              <div class="d-grid">
                <%= link_to 'Edit', edit_pet_path(pet), class: 'btn btn-light btn-sm' %>
              </div>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>